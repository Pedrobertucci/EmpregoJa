<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/atualiza_curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/instituicao_atualiza"
            android:layout_centerVertical="true"
            android:paddingTop="10sp"
            android:text="Nome Faculdade" />

        <TextView
            android:id="@+id/instituicao_atualiza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="8sp"
            android:text="Curso"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Tipo Curso"
            android:layout_below="@+id/atualiza_curso"
            android:layout_alignStart="@+id/atualiza_curso" />

        <RelativeLayout
            android:layout_width="170sp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout2">

            <Button
                android:id="@+id/btnDeletaEstudo"
                android:layout_width="80dp"
                android:layout_height="35sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="5sp"
                android:background="@color/colorAccent"
                android:text="Excluir"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnEditaEstudo"
                android:layout_width="80dp"
                android:layout_height="35sp"
                android:layout_alignParentBottom="false"
                android:layout_alignTop="@+id/btnDeletaEstudo"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:layout_toStartOf="@+id/btnDeletaEstudo"
                android:background="@color/colorPrimaryDark"
                android:text="Editar"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>